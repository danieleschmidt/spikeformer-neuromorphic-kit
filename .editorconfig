root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
max_line_length = 88
indent_size = 4

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_size = 2

[*.toml]
indent_size = 4

[*.{html,css}]
indent_size = 2

[Dockerfile*]
indent_size = 4